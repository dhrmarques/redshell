<h1>Listando <%= (:employee_types).to_s.classify.constantize.label %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= EmployeeType.label :title %></th>
      <th><%= EmployeeType.label :description %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_types.each do |employee_type| %>
      <tr>
        <td><%= employee_type.title %></td>
        <td><%= employee_type.description %></td>
        <td><%= link_to '<i class="fa fa-eye"></i> Ver'.html_safe, employee_type, class: "btn btn-default" %></td>
        <td><%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_employee_type_path(employee_type), class: "btn btn-warning" %></td>
        <td><%= link_to '<i class="fa fa-trash"></i> Remover'.html_safe, employee_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<i class=\"fa fa-plus-circle fa-lg\"></i> Novo #{EmployeeType.label}".html_safe, new_employee_type_path, class: "btn btn-primary" %>
