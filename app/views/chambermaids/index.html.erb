<h1>Listing chambermaids</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Passcode</th>
      <th>Name</th>
      <th>Surname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chambermaids.each do |chambermaid| %>
      <tr>
        <td><%= chambermaid.login %></td>
        <td><%= chambermaid.passcode %></td>
        <td><%= chambermaid.name %></td>
        <td><%= chambermaid.surname %></td>
        <td><%= link_to 'Show', chambermaid %></td>
        <td><%= link_to 'Edit', edit_chambermaid_path(chambermaid) %></td>
        <td><%= link_to 'Destroy', chambermaid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

