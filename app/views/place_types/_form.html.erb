<%= simple_form_for(@place_type) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :restricted, as: :boolean %>
  <%= f.input :common, as: :boolean %>

  <div class="actions">
    <%= f.button :submit, "Salvar #{PlaceType.label}", class: 'btn btn-success'  %>
  </div>
<% end %>
