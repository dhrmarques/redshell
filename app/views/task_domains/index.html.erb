<h1>Listing task_domains</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_domains.each do |task_domain| %>
      <tr>
        <td><%= task_domain.title %></td>
        <td><%= task_domain.description %></td>
        <td><%= link_to '<i class="fa fa-eye"></i> Ver'.html_safe, task_domain, class: "btn btn-default" %></td>
        <td><%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_task_domain_path(task_domain), class: "btn btn-warning" %></td>
        <td><%= link_to '<i class="fa fa-trash"></i> Remover'.html_safe, task_domain, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="fa fa-plus-circle fa-lg"></i> Novo Task domain'.html_safe, new_task_domain_path, class: "btn btn-primary" %>
