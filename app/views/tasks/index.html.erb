<h1>Lista de Tarefas</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= Task.label :after %></th>
      <th><%= Task.label :before %></th>
      <th><%= Task.label :checkin_start %></th>
      <th><%= Task.label :checkin_finish %></th>
      <th><%= Task.label :details %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.after %></td>
        <td><%= task.before %></td>
        <td><%= task.checkin_start %></td>
        <td><%= task.checkin_finish %></td>
        <td><%= task.details %></td>
        <td><%= link_to 'Exibir', task %></td>
        <td><%= link_to 'Editar', edit_task_path(task) %></td>
        <td><%= link_to 'Remover', task, method: :delete, data: { confirm: 'VocÃª deseja remover esta tarefa?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<i class=\"fa fa-plus-circle fa-lg\"></i> Novo #{Task.label}".html_safe, new_task_path, class: "btn btn-primary" %>
