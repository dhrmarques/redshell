<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>After</th>
      <th>Before</th>
      <th>Checkin start</th>
      <th>Checkin finish</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.after %></td>
        <td><%= task.before %></td>
        <td><%= task.checkin_start %></td>
        <td><%= task.checkin_finish %></td>
        <td><%= task.details %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
