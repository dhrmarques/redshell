<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "erro") %> impediram esta tarefa de ser criada:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :after %><br>
    <%= f.datetime_select :after %>
  </div>
  <div class="field">
    <%= f.label :before %><br>
    <%= f.datetime_select :before %>
  </div>
  <div class="field">
    <%= f.label :checkin_start %><br>
    <%= f.datetime_select :checkin_start %>
  </div>
  <div class="field">
    <%= f.label :checkin_finish %><br>
    <%= f.datetime_select :checkin_finish %>
  </div>
  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>
  <div>
    <%= select_tag(:employee_id, options_for_select(@employees.collect { |employee| [employee.id, employee.id] }), {:blank => false})%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
