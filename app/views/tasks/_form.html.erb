<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :room %><br>
    <%= f.select(:room_id) do %>
      <% @rooms.each do |r| %>
        <%= content_tag(:option, r.desc, value: r.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :chambermaid %><br>
    <%= f.select(:chambermaid_id) do %>
      <% @chambermaids.each do |c| %>
        <%= content_tag(:option, c.desc, value: c.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :due %><br>
    <%= f.datetime_select :due %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
