<h1>Listing tools</h1>

<table class="table">
  <thead>
    <tr>
      <th>Qty</th>
      <th>Measure unit</th>
      <th>As int</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.qty %></td>
        <td><%= tool.measure_unit %></td>
        <td><%= tool.as_int %></td>
        <td><%= tool.title %></td>
        <td><%= tool.description %></td>
        <td><%= link_to 'Show', tool %></td>
        <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
        <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tool', new_tool_path %>
