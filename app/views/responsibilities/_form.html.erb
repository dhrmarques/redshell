<%= form_for(@responsibility) do |f| %>
  <% if @responsibility.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@responsibility.errors.count, "error") %> prohibited this responsibility from being saved:</h2>

      <ul>
      <% @responsibility.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :task_domain_id, TaskDomain.label %><br>
    <%= f.select(:task_domain_id, options_for_select(@task_domains.collect { |td| [td.title, td.id] }, @responsibility.task_domain_id), prompt: 'Escolha um domínio de tarefa')%>
  </div>

  <div class="field">
    <%= f.label :employee_type_id, EmployeeType.label %><br>
    <%= f.select(:employee_type_id, options_for_select(@employee_types.collect { |et| [et.title, et.id] }, @responsibility.employee_type_id), prompt: 'Escolha um tipo de funcionário')%>
  </div>

  <div class="actions">
    <%= f.submit "Criar #{Responsibility.label}", class: 'btn btn-success' %>
  </div>
<% end %>
